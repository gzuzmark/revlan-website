---
import i18next, { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";
import { Image } from "astro:assets";
import gameController from "../assets/OriginalProgram-gamecontroller.png";
import backPack from "../assets/OriginalProgram-backpack.png";
import world from "../assets/OriginalProgram-world.png";
---

<section class='text-gray-600 body-font with-background'>
  <div class='container px-5 py-24 mx-auto'>
    <div class='flex flex-col text-center w-full mb-20'>
      <h1 class='sm:text-3xl text-2xl font-medium title-font text-gray-900'>
        <Trans i18nKey='home.originalProgram.title'>
          See What Our <span class='text-primary'>Traveler s moms</span>
        </Trans>
      </h1>
    </div>
    <div class='flex flex-wrap -m-4'>
      <div class='lg:w-1/3 lg:mb-0 mb-6 p-4'>
        <div
          class='h-full text-center flex flex-col items-center justify-center'>
          <!-- <img
            alt='testimonial'
            class='w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-200 bg-gray-100'
            src='/assets/testimony-1.png'
          /> -->
          <Image
            src={gameController}
            alt='Philosophy'
            class='max-w-32 inline-block object-center'
          />
          <h2
            class='text-gray-900 font-medium title-font tracking-wider text-3xl'>
            {t("home.originalProgram.subtitle1")}
          </h2>
          <p class='max-w-80 text-center mt-5'>
            {t("home.originalProgram.text1")}
          </p>
        </div>
      </div>
      <div class='lg:w-1/3 lg:mb-0 mb-6 p-4'>
        <div
          class='h-full text-center flex flex-col items-center justify-center'>
          <!-- <img
            alt='testimonial'
            class='w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-200 bg-gray-100'
            src='/assets/testimony-2.png'
          /> -->
          <Image
            src={backPack}
            alt='Approach'
            class='max-w-32 inline-block object-center'
          />
          <h2
            class='text-gray-900 font-medium title-font tracking-wider text-3xl'>
            {t("home.originalProgram.subtitle2")}
          </h2>
          <p class='max-w-80 text-center mt-5'>
            {t("home.originalProgram.text2")}
          </p>
        </div>
      </div>
      <div class='lg:w-1/3 lg:mb-0 p-4'>
        <div
          class='h-full text-center flex flex-col items-center justify-center'>
          <!-- <img
            alt='testimonial'
            class='w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-200 bg-gray-100'
            src='/assets/testimony-3.png'
          /> -->
          <Image
            src={world}
            alt='Curriculum'
            class='max-w-32 inline-block object-center'
          />
          <h2
            class='text-gray-900 font-medium title-font tracking-wider text-3xl'>
            {t("home.originalProgram.subtitle3")}
          </h2>
          <p class='max-w-80 text-center mt-5'>
            {t("home.originalProgram.text2")}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
