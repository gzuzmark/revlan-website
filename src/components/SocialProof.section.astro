---
import i18next, { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";
---

<section class="text-gray-600 body-font bg-bgsecondary">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h2
        class="text-xs text-red-500 tracking-widest font-medium title-font mb-1">
        {t("home.reviews.section-title")}
      </h2>
      <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">
        <Trans i18nKey="home.reviews.main-title">
          See What Our <span class="text-primary">Traveler s moms</span> Are Saying!
        </Trans>
      </h1>
      <h2 class="text-xs tracking-widest font-medium title-font mb-1">
        {t("home.reviews.text")}
      </h2>
    </div>
    <div class="flex flex-wrap -m-4">
      <div class="lg:w-1/3 lg:mb-0 mb-6 p-4">
        <div class="h-full text-center">
          <img
            alt="testimonial"
            class="w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-200 bg-gray-100"
            src="/assets/testimony-1.png"
          />
          <p class="leading-relaxed">
            {t("home.reviews.testimony1")}
          </p>
          <span class="inline-block h-1 w-10 rounded bg-red-500 mt-6 mb-4"
          ></span>
          <h2
            class="text-gray-900 font-medium title-font tracking-wider text-sm">
            Stefy Zuñiga
          </h2>
          <p class="text-gray-500">Camila’s Mommy</p>
        </div>
      </div>
      <div class="lg:w-1/3 lg:mb-0 mb-6 p-4">
        <div class="h-full text-center">
          <img
            alt="testimonial"
            class="w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-200 bg-gray-100"
            src="/assets/testimony-2.png"
          />
          <p class="leading-relaxed">
            {t("home.reviews.testimony2")}
          </p>
          <span class="inline-block h-1 w-10 rounded bg-red-500 mt-6 mb-4"
          ></span>
          <h2
            class="text-gray-900 font-medium title-font tracking-wider text-sm">
            Ruth Marly
          </h2>
          <p class="text-gray-500">Catalina’s Mommy</p>
        </div>
      </div>
      <div class="lg:w-1/3 lg:mb-0 p-4">
        <div class="h-full text-center">
          <img
            alt="testimonial"
            class="w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-200 bg-gray-100"
            src="/assets/testimony-3.png"
          />
          <p class="leading-relaxed">
            {t("home.reviews.testimony3")}
          </p>
          <span class="inline-block h-1 w-10 rounded bg-red-500 mt-6 mb-4"
          ></span>
          <h2
            class="text-gray-900 font-medium title-font tracking-wider text-sm">
            Andrea Alejandra
          </h2>
          <p class="text-gray-500">Leandro’s Mommy</p>
        </div>
      </div>
    </div>
    <div class="flex flex-col text-center w-full mb-20">
      <h2 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">
        <Trans i18nKey="home.reviews.second-title">
          Our Alliances for a <span class="text-primary">Brighter Future!</span>
        </Trans>
      </h2>
    </div>
    <div class="flex flex-wrap gap-3 items-center justify-center">
      <img alt="municipalidad de lima sponsor" src="/assets/sponsor-mml.png" />
      <img alt="ananau sponsor" src="/assets/sponsor-ananau.png" />
    </div>
  </div>
</section>
