      <div class="flex flex-col text-center w-full mb-20 items-center">
        <div class="p-4 md:w-1/2 lg:w-1/3 text-center">
          <Link
            style="secondary"
            href={localizePath("/contact")}
            target="_self"
            class="flex gap-1 items-center justify-center"
            rel="noopener">
            {t("home.features-cta")}
