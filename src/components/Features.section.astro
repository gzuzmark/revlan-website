---
import Icon from "./Icon.astro";
import Link from "./ui/LinkOrButton.astro";
import i18next, { t } from "i18next";
import { Trans } from "astro-i18next/components";
import { localizePath } from "astro-i18next";
---

<section id="howitworks" class="text-gray-600 body-font bg-bgsecondary">
  <div class="wrapper">
    <div class="container px-5 py-6 lg:py-4 md:py-6 mx-auto bg-bgsecondary">
      <div class="flex flex-col text-center w-full mb-20">
        <h2 class="text-xs tracking-widest font-medium title-font mb-1">
          {t("home.features-title")}
        </h2>
        <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">
          <Trans i18nKey="home.features-title2">
            How do we deliver <span class="text-primary">Edutainment</span>
          </Trans>
        </h1>
        <h2 class="text-xs tracking-widest font-medium title-font mb-1">
          {t("home.features-subtitle")}
        </h2>
      </div>
      <div class="flex flex-wrap -m-4">
        <div class="p-4 md:w-1/2 lg:w-1/3">
          <div class="flex rounded-lg h-full p-8 flex-col bg-white">
            <div class="flex items-center mb-3">
              <div
                class="w-14 h-14 mr-3 inline-flex items-center justify-center rounded-full bg-red-light text-red border-icon-opacity-red border flex-shrink-0">
                <Icon icon="piggy-bank" size="1.5em" />
              </div>
              <h2 class="text-gray-900 text-lg title-font font-medium">
                {t("home.feature1-title")}
              </h2>
            </div>
            <div class="flex-grow">
              <p class="leading-relaxed text-base">
                {t("home.feature1-text")}
              </p>
              <a class="mt-3 text-red-500 inline-flex items-center"
                >Learn More
                <svg
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  class="w-4 h-4 ml-2"
                  viewBox="0 0 24 24">
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
        <div class="p-4 md:w-1/2 lg:w-1/3">
          <div class="flex rounded-lg h-full p-8 flex-col bg-white">
            <div class="flex items-center mb-3">
              <div
                class="w-14 h-14 mr-3 inline-flex items-center justify-center rounded-full bg-blue-light text-blue border-icon-opacity-blue border flex-shrink-0">
                <Icon icon="diamond" size="1.5em" />
              </div>
              <h2 class="text-gray-900 text-lg title-font font-medium">
                {t("home.feature2-title")}
              </h2>
            </div>
            <div class="flex-grow">
