---
import Icon from "./Icon.astro";
import Link from "./ui/LinkOrButton.astro";
import ContactBtn from "./ContactBtn.svelte";
import i18next, { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";
import { Image } from "astro:assets";
import aboutUsImage from "../assets/aboutus.png";
---

<section id='about' class='text-gray-600 body-font'>
  <div
    class='container mx-auto flex px-5 md:px-24 md:flex-row flex-col items-center'>
    <div class='lg:max-w-lg lg:w-full md:w-1/2 w-5/6'>
      <Image
        src={aboutUsImage}
        loading='lazy'
        alt='about us'
        class='object-cover object-center rounded'
      />
    </div>
    <div
      class='lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center'>
      <h2
        class='text-xs text-black tracking-widest font-medium title-font mb-1'>
        {t("home.aboutus.section-title")}
      </h2>
      <h1
        class='title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900'>
        <Trans i18nKey='home.aboutus.main-title'>
          Meet Your <span class='text-primary'>Mentors!</span>
        </Trans>
        <br class='hidden lg:inline-block' />
      </h1>
      <p class='mb-8 leading-relaxed'>
        {t("home.aboutus.text")}
      </p>
      <div class='flex justify-center'>
        <ContactBtn text={t("home.aboutus.cta")} client:visible />
      </div>
    </div>
  </div>
</section>
