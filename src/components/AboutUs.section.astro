---
import Icon from "./Icon.astro";
import Link from "./ui/LinkOrButton.astro";
import ContactBtn from "./ContactBtn.svelte";
---

<section id="about" class="text-gray-600 body-font">
  <div class="container mx-auto flex px-5 md:flex-row flex-col items-center">
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
      <img
        class="object-cover object-center rounded"
        alt="hero"
        src="/assets/aboutus.png"
      />
    </div>
    <div
      class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
      <h2
        class="text-xs text-black tracking-widest font-medium title-font mb-1">
        ABOUT US
      </h2>
      <h1
        class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">
        Meet Your Mentors!
        <br class="hidden lg:inline-block" />readymade gluten
      </h1>
      <p class="mb-8 leading-relaxed">
        Get to know the educators in your life that can help guide you on your
        journey. They have the wisdom, experience and knowledge to help you
        achieve success.
      </p>
      <div class="flex justify-center">
        <ContactBtn client:visible />
      </div>
    </div>
  </div>
</section>
