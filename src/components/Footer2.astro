---
import Icon from "./Icon.astro";
---

<footer class="bg-purple body-font">
  <div
    class="container flex flex-col items-stretch gap-3 md:flex-row w-full px-5 py-8 mx-auto">
    <div class="left-section w-full md:w-2/5 flex items-center">
      <div class="flex">
        <img src="/assets/revlan-logo.svg" alt="hero image" class="" />
        <div class="ml-4">
          <h1 class="text-2xl font-bold text-white">Revolution Languages</h1>
          <p class="text-base text-white">
            Revolutionary Language Learning for Kids
          </p>
        </div>
      </div>
    </div>
    <div class="right-section w-full md:w-3/5 flex flex-col justify-between">
      <div class="contact-info flex justify-center">
        <div class="phone-number text-base text-white mr-4">
          <p>+51 915 089 522</p>
        </div>
        <div class="email text-base text-white">
          <p>revolutionlanguages@gmail.com</p>
        </div>
      </div>
      <div class="menu mt-4">
        <nav class="flex justify-center space-x-4">
          <a href="#" class="text-base text-white">How it works</a>
          <a href="#" class="text-base text-white">The Show</a>
          <a href="#" class="text-base text-white">About us</a>
          <a href="#" class="text-base text-white">Reviews</a>
          <a href="#" class="text-base text-white">Pricing</a>
        </nav>
      </div>
    </div>
  </div>
  <div class="bg-purple brightness-110 text-white">
    <div
      class="container px-5 py-2 mx-auto flex items-center sm:flex-row flex-col">
      <div class="flex justify-between w-full">
        <span class="inline-flex sm:mt-0 mt-4 justify-center sm:justify-start">
          <a class="text-white">
            <svg
              fill="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-5 h-5"
              viewBox="0 0 24 24">
              <path
                d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"
              ></path>
            </svg>
          </a>
          <a class="ml-3 text-white">
            <svg
              fill="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-5 h-5"
              viewBox="0 0 24 24">
              <path
                d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
              ></path>
            </svg>
          </a>
          <a class="ml-3 text-white">
            <svg
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-5 h-5"
              viewBox="0 0 24 24">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01"
              ></path>
            </svg>
          </a>
          <a class="ml-3 text-white">
            <svg
              fill="currentColor"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="0"
              class="w-5 h-5"
              viewBox="0 0 24 24">
              <path
                stroke="none"
                d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"
              ></path>
              <circle cx="4" cy="4" r="2" stroke="none"></circle>
            </svg>
          </a>
        </span>
        <p
          class="inline-flex text-sm text-white sm:py-2 sm:mt-0 mt-4 whitespace-nowrap">
          © 2023 Revlan — Made with {" "}
          <Icon icon="heart" size="1.2em" />
          {" "}
          by Rumilabs
        </p>
      </div>
    </div>
  </div>
</footer>
