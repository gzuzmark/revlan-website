---
import Icon from "./Icon.astro";
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
import { Image } from "astro:assets";
import logo from "../assets/revlan-logo.svg";
---

<footer class='bg-purple body-font'>
  <div
    class='container flex flex-col items-stretch gap-3 md:flex-row w-full px-5 mx-auto h-auto md:h-40'>
    <div class='left-section w-full md:w-1/3 flex items-center py-8'>
      <div class='flex'>
        <Image src={logo} alt='Revlan logo' />
      </div>
      <div class='flex-row w-full ml-4'>
        <h1 class='text-2xl font-bold text-white'>{t("footer.title")}</h1>
        <p class='text-base text-white'>
          {t("footer.text")}
        </p>
      </div>
    </div>
    <div
      class='right-section hidden text-center w-full md:w-2/3 md:grid grid-cols-1 md:grid-cols-2 grid-rows-3'>
      <div
        class='contact-info flex justify-center md:border md:border-t-0 md:border-r-0 md:border-[#890ec7] items-center'>
        <div class='phone-number text-base text-white text-center'>
          <p>+51 915 089 522</p>
        </div>
      </div>
      <div
        class='email flex justify-center md:border md:border-t-0 md:border-r-0 md:border-[#890ec7] items-center'>
        <div class='text-base text-white text-center'>
          <p class='text-center'>contact@revlan.co</p>
        </div>
      </div>
      <div
        class='menu hidden border border-t-0 border-b-0 md:border-[#890ec7] border-r-0 col-span-2 md:flex items-center justify-center'>
        <nav class='flex justify-center space-x-4'>
          <a href='#howitworks' class='text-base text-white'>How it works</a>
          <a href='#programs' class='text-base text-white'>The Show</a>
          <a href='#about' class='text-base text-white'>About us</a>
          <a href='#reviews' class='text-base text-white'>Reviews</a>
          <a href='#pricing' class='text-base text-white'>Pricing</a>
        </nav>
      </div>
      <div
        class='contact-info flex justify-center md:border md:border-t-0 md:border-r-0 md:border-[#890ec7] items-center'>
        <div class='phone-number text-base text-white text-center'>
          <a
            href='https://drive.google.com/file/d/1S5cnKrs5XztjiN5v9HYbLXlUc-kPt-P0/view?usp=sharing'
            class='text-white'>{t("footer.privacy")}</a
          >
        </div>
      </div>
      <div
        class='email flex justify-center md:border md:border-t-0 md:border-r-0 md:border-[#890ec7] items-center'>
        <div class='text-base text-white text-center'>
          <a
            href='https://drive.google.com/file/d/1yxWgS5cQ6sWTwcG86iO-aHPhddkET1kg/view?usp=sharing'
            class='text-center text-white'>{t("footer.terms")}</a
          >
        </div>
      </div>
    </div>
  </div>
  <div class='container md:hidden px-5 py-2 pb-14 mx-auto'>
    <div class='flex flex-wrap md:text-left text-center -mb-10 -mx-4'>
      <div class='lg:w-1/6 md:w-1/2 w-full px-4'>
        <h2
          class='title-font font-medium text-white tracking-widest text-sm mb-3'>
          CONTACT
        </h2>
        <nav class='list-none mb-10'>
          <li>
            <a class='text-base text-white'>+51 915 089 522</a>
          </li>
          <li>
            <a class='text-base text-white'>contact@revlan.co</a>
          </li>
        </nav>
      </div>
      <div class='lg:w-1/6 md:w-1/2 w-full px-4'>
        <h2
          class='title-font font-medium text-white tracking-widest text-sm mb-3'>
          LEGAL
        </h2>
        <nav class='list-none mb-10'>
          <li>
            <a
              href='https://drive.google.com/file/d/1S5cnKrs5XztjiN5v9HYbLXlUc-kPt-P0/view?usp=sharing'
              class='text-base text-white'>{t("footer.privacy")}</a
            >
          </li>
          <li>
            <a
              href='https://drive.google.com/file/d/1yxWgS5cQ6sWTwcG86iO-aHPhddkET1kg/view?usp=sharing'
              class='text-base text-white'>{t("footer.terms")}</a
            >
          </li>
        </nav>
      </div>
    </div>
  </div>
  <div class='bg-purple brightness-110 text-white'>
    <div class='container px-5 py-2 mx-auto flex items-center flex-row'>
      <div
        class='flex md:justify-between w-full flex-wrap text-center justify-center'>
        <span
          class='inline-flex sm:py-2 sm:mt-0 mt-4 justify-center sm:justify-start'>
          <a href='https://www.facebook.com/revlanshows/' class='text-white'>
            <svg
              fill='currentColor'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              class='w-5 h-5'
              viewBox='0 0 24 24'>
              <path
                d='M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z'
              ></path>
            </svg>
          </a>
          <a class='ml-3 text-white'>
            <svg
              fill='currentColor'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              class='w-5 h-5'
              viewBox='0 0 24 24'>
              <path
                d='M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z'
              ></path>
            </svg>
          </a>
          <a
            href='https://www.instagram.com/revlanshows/'
            class='ml-3 text-white'>
            <svg
              fill='none'
              stroke='currentColor'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              class='w-5 h-5'
              viewBox='0 0 24 24'>
              <rect width='20' height='20' x='2' y='2' rx='5' ry='5'></rect>
              <path d='M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01'
              ></path>
            </svg>
          </a>
          <a
            href='https://www.linkedin.com/company/revlan/'
            class='ml-3 text-white'>
            <svg
              fill='currentColor'
              stroke='currentColor'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='0'
              class='w-5 h-5'
              viewBox='0 0 24 24'>
              <path
                stroke='none'
                d='M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z'
              ></path>
              <circle cx='4' cy='4' r='2' stroke='none'></circle>
            </svg>
          </a>
        </span>
        <p
          class='inline-flex text-sm text-white sm:py-2 sm:mt-0 mt-4 whitespace-nowrap'>
          © 2023 Revlan — Made with {" "}
          <Icon icon='heart' size='1.2em' />
          {" "}
          by Rumilabs
        </p>
      </div>
    </div>
  </div>
</footer>
