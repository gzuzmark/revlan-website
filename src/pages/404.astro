---
import SecondaryLayout from "layouts/SecondaryLayout.astro";
import Hero from "../components/Hero.astro";
import LinkOrButton from "@components/ui/LinkOrButton.astro";
import Icon from "@components/Icon.astro";
import { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";

changeLanguage("en");
---

<SecondaryLayout
  title='Not Found'
  description='404 Error â€” this page was not found'>
  <section class='text-gray-600 body-font'>
    <div
      class='container mx-auto flex px-5 py-24 items-center justify-center flex-col'>
      <img
        class='lg:w-2/6 md:w-3/6 w-5/6 mb-10 object-cover object-center rounded'
        alt='hero'
        src='/assets/hero-404.svg'
      />
      <div class='text-center lg:w-2/3 w-full'>
        <h1
          class='title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900'>
          <Trans i18nKey='errorPage.title'>
            Let's Learn From <span class='text-primary'>Our Mistakes</span>
          </Trans>

          On
        </h1>
        <h2
          class='text-xs text-black tracking-widest font-medium title-font mb-1'>
          <Trans i18nKey='errorPage.subtitle'>
            <span class='text-primary'>Error 404</span> - Oops! You've stumbled upon
            a dead-end page.
          </Trans>
        </h2>
        <p class='mb-8 leading-relaxed'>
          {t("errorPage.text")}
        </p>
        <div class='flex justify-center'>
          <LinkOrButton
            href='/'
            target='_self'
            class='flex gap-1 items-center justify-center'
            rel='noopener'>
            {t("errorPage.cta")}
            <Icon icon='arrow-right' size='1.2em' />
          </LinkOrButton>
        </div>
      </div>
    </div>
  </section>
</SecondaryLayout>
